@using Microsoft.AspNetCore.Identity
@using Bookify.Models

@inject SignInManager<Customer> SignInManager
@inject UserManager<Customer> UserManager

<style>
    .user-profile-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 12px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 20px;
        color: white;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .user-profile-badge:hover {
        background: rgba(255, 255, 255, 0.25);
    }

    .user-avatar-mini {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: white;
        color: #003580;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .logout-btn {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
    }

    .logout-btn:hover {
        color: #ffc107;
    }

    .navbar-nav .nav-link {
        color: rgba(255, 255, 255, 0.9) !important;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .navbar-nav .nav-link:hover {
        color: #ffc107 !important;
    }

    .navbar-nav .nav-link i {
        font-size: 1.1rem;
    }
</style>

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var userInitial = user?.Email?.FirstOrDefault().ToString().ToUpper() ?? "U";
    var isDashboard = Context.Request.Path.StartsWithSegments("/Admin");
    
    @if (isDashboard)
    {
        <!-- Dashboard Version -->
        <div class="navbar-user-info">
            <div class="navbar-user-avatar" title="@user?.Email">
                @userInitial
            </div>
            <div style="display: flex; flex-direction: column; gap: 2px;">
                <div class="navbar-user-email">@UserManager.GetUserName(User)</div>
                <small style="color: #999; font-size: 0.75rem;">Admin</small>
            </div>
        </div>
        <div class="navbar-user-dropdown">
            <a href="@Url.Action("Index", "Home", new { area = "" })" title="Back to Home">
                <i class="fas fa-home"></i>
            </a>
        </div>
        <form id="logoutForm" style="display: inline;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="navbar-user-dropdown" style="background: none; border: none; cursor: pointer;" title="Logout">
                <i class="fas fa-sign-out-alt" style="color: #667eea;"></i>
            </button>
        </form>
    }
    else
    {
        <!-- Main Layout Version - Enhanced -->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a id="manage" class="user-profile-badge" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage your account">
                    <div class="user-avatar-mini">@userInitial</div>
                    <span>@UserManager.GetUserName(User)</span>
                </a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" style="display: inline;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="logout-btn border-0" style="background: none;">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </li>
        </ul>
    }
}
else
{
    var isDashboard = Context.Request.Path.StartsWithSegments("/Admin");
    
    @if (!isDashboard)
    {
        <!-- Main Layout Version - Not Signed In -->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">
                    <i class="fas fa-user-plus"></i>
                    <span>Register</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Login</span>
                </a>
            </li>
        </ul>
    }
}

