@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="identity-container">
    <div class="account-card">
        <div class="card-side">
            <h2>Create a new account</h2>
            <p>Join Bookify to manage bookings, save favorite hotels and get exclusive offers.</p>
        </div>
        <div class="card-form">
            <div class="brand">
                <span class="logo" aria-hidden="true"></span>
                <span class="title">Bookify</span>
            </div>

            <form id="registerForm" class="identity-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="Input.Name">Name</label>
                    <span asp-validation-for="Input.Name" class="field-validation-error"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" autocomplete="email" aria-required="true" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="field-validation-error"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Address" class="form-control" autocomplete="street-address" />
                    <label asp-for="Input.Address">Address</label>
                    <span asp-validation-for="Input.Address" class="field-validation-error"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" class="form-control" aria-required="true">
                        <option value="">-- Select Role --</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <label asp-for="Input.Role">Role</label>
                    <span asp-validation-for="Input.Role" class="field-validation-error"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="field-validation-error"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="field-validation-error"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn-accent btn-lg">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
