@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="identity-container">
    <div class="account-card">
        <div class="card-side">
            <h2>Welcome back</h2>
            <p>Sign in to access your bookings and account settings.</p>
        </div>
        <div class="card-form">
            <div class="brand">
                <span class="logo" aria-hidden="true"></span>
                <span class="title">Bookify</span>
            </div>

            <form id="account" class="identity-form" method="post">
                <h3 class="mb-2">Use a local account to log in.</h3>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="field-validation-error"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="field-validation-error"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn-accent btn-lg">Log in</button>
                </div>
                <div class="form-foot mt-3">
                    <div class="small">
                        <a id="forgot-password" class="identity-link" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                    <div class="small">
                        <a class="identity-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
