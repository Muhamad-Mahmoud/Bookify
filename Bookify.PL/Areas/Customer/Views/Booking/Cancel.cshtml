@model int
@{
    ViewData["Title"] = "Booking Cancelled";
}

<div class="container pt-5">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Booking Cancelled</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
            </div>
            <div class="text-center">
                <h4 class="text-danger">Your reservation has been cancelled.</h4>
                <p>Reservation ID: <strong>@Model</strong></p>
                <p>If you have any questions, please contact support.</p>
            </div>
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
