@model Room

<link rel="stylesheet" href="~/css/admin-forms.css" />

<style>
    /* Delete-specific overrides */
    .form-card .card-header {
        background: var(--danger-gradient);
    }
</style>

<div class="container mt-4">

    <!-- Main Card -->
    <div class="card form-card mx-auto" >
        
        <div class="card-header">
            <h5 class="card-title">
                <i class="fas fa-info-circle icon-spacing"></i> Confirm Deletion
            </h5>
        </div>

        <div class="card-body">

            <!-- Room Info Display -->
            <div class="info-box">
                <div class="info-box-label">Room Number</div>
                <div class="info-box-value">
                    @Model.RoomNumber
                </div>
            </div>

            <div class="info-box">
                <div class="info-box-label">Floor</div>
                <div class="info-box-value">
                    @(Model.Floor.HasValue ? Model.Floor.Value.ToString() : "Not specified")
                </div>
            </div>

            <div class="info-box">
                <div class="info-box-label">Room Type</div>
                <div class="info-box-value">
                    @Model.RoomType?.Name
                </div>
            </div>

            <div class="info-box">
                <div class="info-box-label">Status</div>
                <div class="info-box-value">
                    @Model.Status.ToString()
                </div>
            </div>

           

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="info-box">
                    <div class="info-box-label">Notes</div>
                    <div class="info-box-value">
                        @Model.Notes
                    </div>
                </div>
            }

            <div class="info-box">
                <div class="info-box-label">Room ID</div>
                <div style="font-size: 0.9rem; color: #9ca3af; margin-top: 0.5rem; font-family: monospace;">
                    @Model.Id
                </div>
            </div>

            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <!-- Buttons -->
                <div class="button-group">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times icon-spacing"></i>No, Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash icon-spacing"></i>Yes, Delete
                    </button>
                </div>

            </form>
        </div>
    </div>

</div>
