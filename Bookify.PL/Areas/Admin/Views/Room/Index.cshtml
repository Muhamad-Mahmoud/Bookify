@model List<Room>

<link rel="stylesheet" href="~/css/admin-tables.css" />

<div class="dashboard-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1>
            <i class="fas fa-door-open"></i> Rooms Management
        </h1>
        <a asp-controller="Room" asp-action="Add" class="add-hotel-btn">
            <i class="fas fa-plus-circle"></i> Add New Room
        </a>
    </div>

    <!-- Rooms Table -->
    <div class="hotels-table-container">
        @if (Model.Any())
        {
            <table class="table hotels-table">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">ID</th>
                        <th>Room Number</th>
                        <th>Floor</th>
                        <th>Room Type</th>
                        <th>Status</th>
                        <th class="text-center" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="hotel-id-badge">@item.Id</span>
                            </td>
                            <td>
                                <span class="hotel-name">@item.RoomNumber</span>
                            </td>
                            <td>
                                <span class="hotel-city">@(item.Floor.HasValue ? item.Floor.Value.ToString() : "N/A")</span>
                            </td>
                            <td>
                                <span class="hotel-owner">@item.RoomType?.Name</span>
                            </td>
                            <td>
                                <span class="badge" style="background-color: @(item.Status.ToString() == "Available" ? "#28a745" : "#ffc107")">
                                    @item.Status.ToString()
                                </span>
                            </td>
                           
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a asp-controller="Room"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn-sm-custom btn-edit"
                                       title="Edit Room">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>

                                    <a asp-controller="Room"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn-sm-custom btn-delete"
                                       title="Delete Room">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-hotels-message">
                <i class="fas fa-inbox"></i>
                <p>No rooms found. <a asp-controller="Room" asp-action="Add">Create your first room</a></p>
            </div>
        }
    </div>
</div>
