@model List<City>

<link rel="stylesheet" href="~/css/admin-tables.css" />

<div class="dashboard-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1>
            <i class="fas fa-city"></i> Cities Management
        </h1>
        <a asp-controller="City" asp-action="Add" class="add-hotel-btn">
            <i class="fas fa-plus-circle"></i> Add New City
        </a>
    </div>

    <!-- Cities Table -->
    <div class="hotels-table-container">
        @if (Model.Any())
        {
            <table class="table hotels-table">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">ID</th>
                        <th>City Name</th>
                        <th>Postal Code</th>
                        <th>Country</th>
                        <th class="text-center" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <span class="hotel-id-badge">@item.Id</span>
                            </td>
                            <td>
                                <span class="hotel-name">@item.Name</span>
                            </td>
                            <td>
                                <span class="hotel-city">@item.PostalCode</span>
                            </td>
                            <td>
                                <span class="hotel-owner">@item.Country?.CountryName</span>
                            </td>
                            <td class="text-center">
                                <div class="action-buttons">
                                    <a asp-controller="City"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn-sm-custom btn-edit"
                                       title="Edit City">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>

                                    <a asp-controller="City"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn-sm-custom btn-delete"
                                       title="Delete City">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-hotels-message">
                <i class="fas fa-inbox"></i>
                <p>No cities found. <a asp-controller="City" asp-action="Add">Create your first city</a></p>
            </div>
        }
    </div>
</div>
