@model Customer

<link rel="stylesheet" href="~/css/admin-tables.css" />

<div class="dashboard-page">
    <div class="page-header">
        <h1>
            <i class="fas fa-exclamation-triangle"></i> Delete User
        </h1>
    </div>

    <div class="hotels-table-container" style="max-width: 600px; margin: 0 auto;">
        <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.1); border: 2px solid #dc3545; border-radius: 12px; padding: 20px; margin-bottom: 20px;">
            <h4 style="color: #dc3545; margin-bottom: 10px;">
                <i class="fas fa-exclamation-triangle"></i> Warning
            </h4>
            <p style="margin: 0;">Are you sure you want to delete this user? This action cannot be undone.</p>
        </div>

        <div style="background: white; border-radius: 12px; padding: 25px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
            <h3 style="margin-bottom: 20px; color: #333;">User Details</h3>
            
            <div style="margin-bottom: 15px;">
                <strong>Name:</strong> @Model.Name
            </div>
            
            <div style="margin-bottom: 15px;">
                <strong>Email:</strong> @Model.Email
            </div>
            
            <div style="margin-bottom: 15px;">
                <strong>Phone Number:</strong> @(Model.PhoneNumber ?? "N/A")
            </div>
            
            <div style="margin-bottom: 20px;">
                <strong>Roles:</strong> @ViewBag.Roles
            </div>

            <form asp-controller="User" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div style="display: flex; gap: 10px; justify-content: flex-end;">
                    <a asp-controller="User" asp-action="Index" class="btn-sm-custom btn-edit">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn-sm-custom btn-delete">
                        <i class="fas fa-trash"></i> Delete User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
